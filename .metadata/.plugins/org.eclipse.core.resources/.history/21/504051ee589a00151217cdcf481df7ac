<script type="text/javascript">
	var app = angular.module("myApp", []);
	
	app.controller("mainController",function($scope){
		$scope.ready = "device loading...";
		
		$(document).on("deviceready",function(){
			$scope.ready = "device ready...";
			$scope.$apply();
		});
	});
</script>

